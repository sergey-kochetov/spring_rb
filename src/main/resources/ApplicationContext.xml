<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:jpa="http://www.springframework.org/schema/data/jpa"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-3.2.xsd
                           http://www.springframework.org/schema/tx
                           http://www.springframework.org/schema/tx/spring-tx-4.0.xsd
                           http://www.springframework.org/schema/data/jpa
                           http://www.springframework.org/schema/data/jpa/spring-jpa.xsd">

    <bean id="t1000" class="com.juja.spring.impls.robot.ModelT1000">
        <!--<constructor-arg ref="sonyHead" index="0"/>-->
        <!--<constructor-arg ref="sonyBody" index="1"/>-->
        <!--<constructor-arg ref="sonyHand" index="2"/>-->
        <!--<constructor-arg ref="sonyLeg" index="3"/>-->
        <!--<constructor-arg value="blue" index="4" type="String"/>-->
        <!--<constructor-arg value="2020" index="5" type="int"/>-->
        <!--<constructor-arg value="true" index="6" type="boolean"/>-->

        <property name="head" ref="sonyHead"/>
        <property name="body" ref="sonyBody"/>
        <property name="hand" ref="sonyHand"/>
        <property name="leg" ref="sonyLeg"/>

        <property name="color" value="blue"/>
        <property name="year" value="2020"/>
        <property name="soundEnable" value="true"/>
    </bean>

    <bean id="sonyBody" class="com.juja.spring.impls.robot.sony.SonyBody"/>
    <bean id="sonyHand" class="com.juja.spring.impls.robot.sony.SonyHand"/>
    <bean id="sonyHead" class="com.juja.spring.impls.robot.sony.SonyHead"/>
    <bean id="sonyLeg" class="com.juja.spring.impls.robot.sony.SonyLeg"/>

</beans>