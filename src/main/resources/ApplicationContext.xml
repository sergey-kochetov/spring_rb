<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:jpa="http://www.springframework.org/schema/data/jpa"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-3.2.xsd
                           http://www.springframework.org/schema/tx
                           http://www.springframework.org/schema/tx/spring-tx-4.0.xsd
                           http://www.springframework.org/schema/data/jpa
                           http://www.springframework.org/schema/data/jpa/spring-jpa.xsd"
       default-lazy-init="true">

    <import resource="toshiba_context.xml"/>
    <import resource="sony_context.xml"/>
    <import resource="db_context.xml"/>

    <bean id="t1000" class="com.juja.spring.impls.robot.ModelT1000"
          parent="baseModel" scope="prototype"  depends-on="databaseBean">
        <constructor-arg value="white" index="4" type="String"/>
        <constructor-arg value="2028" index="5" type="int"/>
        <constructor-arg value="true" index="6" type="boolean"/>

        <replaced-method name="action" replacer="actionReplacer">

        </replaced-method>
    </bean>
    <bean id="actionReplacer" class="com.juja.spring.impls.robot.ActionReplacer"/>

    <!--Collection-->
    <bean id="t1000Pool" class="com.juja.spring.impls.pool.T1000Pool">
        <constructor-arg name="robotCollection">
            <map>
                <entry key="2005" value-ref="t1000"/>
                <entry key="2008" value-ref="t1000"/>
                <entry key="2009">
                    <bean class="com.juja.spring.impls.robot.ModelT1000" parent="baseModel">
                        <constructor-arg value="red" name="color" type="String"/>
                        <constructor-arg value="2009" name="year" type="int"/>
                        <constructor-arg value="true" name="soundEnable" type="boolean"/>
                    </bean>
                </entry>
            </map>
        </constructor-arg>
    </bean>

    <bean id="t1000Conveyor" class="com.juja.spring.impls.conveyor.T1000Conveyor">
        <lookup-method name="createRobot" bean="t1000"/>
    </bean>

    <bean id="t1000Empty" class="com.juja.spring.impls.robot.ModelT1000">
        <constructor-arg ref="sonyHead" index="0"/>
        <constructor-arg ref="sonyBody" index="1"/>
        <constructor-arg ref="sonyHand" index="2"/>
        <constructor-arg ref="sonyLeg" index="3"/>
    </bean>

    <bean id="baseModel" abstract="true">
        <constructor-arg ref="toshibaHead" index="0"/>
        <constructor-arg ref="toshibaBody" index="1"/>
        <constructor-arg ref="toshibaHand" index="2"/>
        <constructor-arg ref="toshibaLeg" index="3"/>

        <property name="leg" ref="sonyLeg"/>
    </bean>

    <bean class="com.juja.spring.main.MyBeanPostProcessor"/>

</beans>